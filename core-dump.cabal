category:            Language
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:
    Data.StringBuffer
    Language.Core.Syntax
    Language.Core.Lexer
    Language.Core.Parser
  default-extensions:
    OverloadedStrings
  build-tools:         happy
  build-depends:
    array,
    base ^>=4.12.0.0,
    bytestring,
    ghc,
    ghc-boot-th,
    ghc-paths,
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wall -Wno-name-shadowing

executable hcdump
  main-is:             src/Main.hs
  -- other-extensions:
  build-depends:
    array,
    base,
    bytestring,
    hcdump,
    optparse-applicative,
    text,
  default-language:    Haskell2010
  ghc-options: -Wall -Wno-name-shadowing

test-suite tests
  type: exitcode-stdio-1.0
  main-is: Driver.hs
  build-tool-depends:
    tasty-discover:tasty-discover >= 4.2 && < 4.3,
  build-depends:
    base,
    bytestring,
    hcdump,
    tasty,
    tasty-hspec,
  hs-source-dirs:      test
  default-language:    Haskell2010
  default-extensions:
    OverloadedStrings
